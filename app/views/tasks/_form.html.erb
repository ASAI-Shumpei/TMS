<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <div class="form-group">
      <%= form.label :subject, "件名"%>
      <%= form.text_field :subject %>
    </div>

    <div class="form-group">
      <%= form.label :detail, "詳細"%>
      <%= form.textarea :detail %>
    </div>

    <div class="form-group">
      <%= form.label :due_date, "期限"%>
      <%= form.datetime_field :due_date %>
    </div>

    <div class="form-group">
      <%= form.label :status, "状態"%>
      <%= form.select :status, Task.statuses.keys.map { |status| [t("task.status.#{status}"), status] } %>
    </div>

    <div>
      <%= form.submit "登録する", class: "button button-submit" %>
    </div>
  </div>
<% end %>